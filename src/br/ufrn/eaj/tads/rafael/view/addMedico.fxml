<VBox prefWidth="330.0" spacing="4.0" style="-fx-background-radius: 5; -fx-border-radius: 5;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufrn.eaj.tads.rafael.controller.AddMedicoController">
   <children>
       <Label text="Nome:" />
       <TextField fx:id="inputNome" styleClass="input" />
   
          <Label text="Data de Nascimento:" />
       <DatePicker fx:id="inputDataNascimento" prefWidth="310.0" />
   
          <Label text="Telefone:" />
       <TextField fx:id="inputTelefone" styleClass="input" />
      <Label layoutX="20.0" layoutY="124.0" text="E-mail:" />
      <TextField fx:id="inputEmail" layoutX="20.0" layoutY="145.0" styleClass="input" />
      <Label layoutX="20.0" layoutY="178.0" text="Senha:" />
      <PasswordField fx:id="inputSenha" styleClass="input" />
      <Label layoutX="20.0" layoutY="232.0" text="CRM:" />
      <TextField fx:id="inputCRM" layoutX="20.0" layoutY="199.0" styleClass="input" />
      <Label layoutX="20.0" layoutY="286.0" text="Especialidade:" />
      <ChoiceBox fx:id="inputEspecialidade" prefWidth="310.0" />
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
         
                <Button onAction="#handleAddMedico" styleClass="btn" text="Adicionar" />
            <Button layoutX="229.0" layoutY="10.0" onAction="#handleCancel" prefHeight="29.0" style="-fx-background-color: #DBDBDB; -fx-cursor: pointer;" text="Cancelar" />
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
